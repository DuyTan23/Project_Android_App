<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_ql_admin"
    android:background="@drawable/hinh_nen_chitiet_ngdung">


    <TextView
        android:id="@+id/txtv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trang chủ quản lí admin"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:id="@+id/ql_sach"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/custom_linnerlayout_car"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_ql_sach"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QL Sách"
            android:textColor="#09487A"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ql_theloai"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/custom_linnerlayout_car"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_ql_hoadon"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QL Thể  Loại"
            android:textColor="#09487A"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ql_nhacxb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/custom_linnerlayout_car"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_ql_nhaxb"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QL Nhà XB"
            android:textColor="#09487A"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ql_tacgia"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/custom_linnerlayout_car"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.831"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.392">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/icon_ql_tacgia"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QL Tác Giả"
            android:textColor="#09487A"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/car_log_out_admin"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="5dp"
        android:translationZ="6dp"
        app:backgroundTint="@null"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_log_out"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="LOG OUT"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtv_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin vui lòng không chia sẽ tk với người khác"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>