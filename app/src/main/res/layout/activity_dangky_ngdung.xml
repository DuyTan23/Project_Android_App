<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangky_ngdung"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <ImageButton
            android:id="@+id/btn_previoudk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_previou">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="75dp"
            android:text="ĐĂNG kÝ"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:translationZ="6dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/btn_open_camera_dk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_camera"

                ></ImageButton>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="100dp"
            android:elevation="5dp"
            android:translationZ="6dp">
            <ImageView
                android:id="@+id/img_avatar_dk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_user_dangky">

            </ImageView>

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:translationZ="6dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp">
            <ImageButton
                android:id="@+id/btn_open_folder_img_dk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_folder"

                ></ImageButton>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và Tên"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>
            <EditText
                android:id="@+id/edt_dk_ten"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_login_text"
                android:hint="Họ và tên"
                android:paddingLeft="20dp"
                android:textSize="30dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>
            <EditText
                android:id="@+id/edt_dk_sdt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_login_text"
                android:hint="Số điện thoại"
                android:paddingLeft="20dp"
                android:textSize="30dp">

            </EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>



            <RadioGroup
                android:id="@+id/radi_gt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:checkedButton="@id/rabu_nam">

                <RadioButton
                    android:id="@+id/rabu_nam"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="80dp"
                    android:text="Nam"
                    android:textSize="20dp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/rabu_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="Nữ"
                    android:textSize="20dp">

                </RadioButton>

            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ngày sinh"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>
            <Button
                android:id="@+id/btnOpenDatePicker"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Chọn ngày sinh của bạn"
                android:layout_marginLeft="60dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>

            <EditText
                android:id="@+id/edt_dk_diachi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_login_text"
                android:hint="Địa chỉ liên hệ"
                android:paddingLeft="20dp"
                android:textSize="20dp"></EditText>
        </LinearLayout>
        <Button
            android:id="@+id/btn_tieptuc_dk"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="#97989E"
            app:backgroundTint="@null"
            android:text="Tiếp Tục"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
        </Button>
    </LinearLayout>

</LinearLayout>