<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_ngdung"
    android:orientation="vertical"
    android:background="@drawable/hinh_nen_login"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_previou"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_previou"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUY TÂN LIBRARY"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#020E47"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="60dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="600dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/icon_user_login"
            android:hint="Username"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:textColorHint="#024365"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_edt_login"
            >
        </EditText>
        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:hint="Password"
            android:textSize="25dp"
            android:drawableLeft="@drawable/icon_pass_login"
            android:layout_marginTop="50dp"
            android:textColorHint="#024365"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/custom_edt_login"
            android:inputType="textPassword"
          >
        </EditText>
        <Button
            android:id="@+id/btn_singIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login"
            app:backgroundTint="@null"
            android:layout_marginTop="50dp"
            android:text="Sign In"
            android:textSize="20sp"
            android:layout_marginLeft="70dp">

        </Button>
        <Button
            android:id="@+id/btn_create_accout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login"
            app:backgroundTint="@null"
            android:layout_marginTop="20dp"
            android:text="Create an accout"
            android:textSize="20sp"
            android:layout_marginLeft="70dp">

        </Button>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="DUY TÂN BOOKS NÂNG TẦM TRI THỨC "
            android:textColor="#020E47"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>

</LinearLayout>