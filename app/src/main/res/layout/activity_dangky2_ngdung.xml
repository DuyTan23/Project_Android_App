<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangky2_ngdung"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_previou">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="75dp"
            android:text="ĐĂNG kÝ"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>
            <EditText
                android:id="@+id/user_dk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="nhập tên đăng nhập"
                android:paddingLeft="20dp"
                android:textSize="30dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="190dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo mật khẩu"
                android:textColor="#3A3D45"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pass_dk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nhập mật khẩu"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:inputType="textPassword">

            </EditText>
            <EditText
                android:id="@+id/pass2_dk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nhập lại mật khẩu"
                android:paddingLeft="20dp"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:inputType="textPassword">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#3A3D45">
            </TextView>
            <EditText
                android:id="@+id/diachinhan_dk"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/custom_login_text"
                android:hint="Địa chỉ liên hệ"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btn_dk"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#97989E"
            android:text="Đăng ký "
            android:textSize="25dp"
            app:backgroundTint="@null"
            android:layout_marginTop="50dp"
            />


    </LinearLayout>




</LinearLayout>