<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:elevation="5dp"
    android:translationZ="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_hinhsach_yeuthich"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/hinhgai">

        </ImageView>
        <TextView
            android:id="@+id/txtv_tensach_yeuthich"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Ten Sach"
            android:textStyle="bold"
            android:textSize="25dp">

        </TextView>



        <TextView
            android:id="@+id/txtv_giasach_yeuthich"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Gia sach"
            android:textColor="#F60505"
            android:textSize="15dp">

        </TextView>
        <Button
            android:id="@+id/btn_delete_yeuthich"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/custom_button_login"
            android:gravity="center"
            android:text="XÃ³a"
            android:textSize="15dp"
            app:backgroundTint="@null">

        </Button>
    </LinearLayout>


</androidx.cardview.widget.CardView>